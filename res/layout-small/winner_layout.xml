<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:background="@drawable/rect3006" android:layout_height="match_parent" android:orientation="vertical">
	<TextView android:id="@+id/winner_title" 
	    android:text="@string/winnerPlayer" 
			android:layout_width="wrap_content"
			android:layout_marginTop="15dip" 
			android:textSize="25dip"
			android:textColor="#000"
			android:textStyle="bold"
			android:layout_gravity="center_horizontal"
			android:layout_height="wrap_content"/>
	<ImageView android:src="@drawable/winner" android:id="@+id/winner_winnerImage"
		android:paddingBottom="15dip"
		android:paddingTop="30dip" android:layout_gravity="center_horizontal" android:layout_height="wrap_content" android:layout_width="match_parent"></ImageView>

	<RelativeLayout
	    xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/winner_rlayout_btns"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dip"
	    android:gravity="center_horizontal" >

	    <Button
	        android:id="@+id/score_btn_start"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:background="@drawable/button_main"
	        android:onClick="onClickBtn"
	        android:text="@string/gameOver"
	        android:textSize="24dp" />
	</RelativeLayout>

</LinearLayout>
