<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:nkgroup="http://schemas.android.com/apk/res/cz.nkgroup"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rect3006"
    android:baselineAligned="true"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/score_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/score_top" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/score_scorelayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/score_tubelayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/score_score1"
                android:layout_width="70dip"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="35dp"
                android:text="1"
                android:textColor="#000" />

            <cz.nkgroup.view.ScoreTubeView
                android:id="@+id/scoretube_red"
                android:layout_width="95dp"
                android:layout_height="360dp"
                nkgroup:color="red" />

            <TextView
                android:id="@+id/score_txt_name1"
                android:layout_width="70dip"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="1234"
                android:textSize="20dp"
                android:textColor="#000" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/score_tubelayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/score_score2"
                android:layout_width="70dip"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="35dp"
                android:text="1"
                android:textColor="#000" />

            <cz.nkgroup.view.ScoreTubeView
                android:id="@+id/scoretube_green"
                android:layout_width="95dp"
                android:layout_height="360dp"
                nkgroup:color="green" />

            <TextView
                android:id="@+id/score_txt_name2"
                android:layout_width="70dip"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="12"
                android:textSize="20dp"
                android:textColor="#000" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/score_tubelayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/score_score3"
                android:layout_width="70dip"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="35dp"
                android:text="1"
                android:textColor="#000" />

            <cz.nkgroup.view.ScoreTubeView
                android:id="@+id/scoretube_yellow1"
                android:layout_width="95dp"
                android:layout_height="360dp"
                nkgroup:color="yellow" />

            <TextView
                android:id="@+id/score_txt_name3"
                android:layout_width="70dip"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="20dp"
                android:text="12"
                android:textColor="#000" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/score_rlayout_btns"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:paddingTop="10dp" >

        <Button
            android:id="@+id/score_btn_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_main"
            android:onClick="onClickStartBtn"
            android:text="Start"
            android:textSize="35dp" />
    </RelativeLayout>

</LinearLayout>